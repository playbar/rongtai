<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shorty_two_layout"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shorty_two_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/list_pic"/>

    <ImageView
        android:id="@+id/shorty_two_image_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/list_pic_border"/>

    <TextView
        android:id="@+id/shorty_two_name_tv"
        android:layout_below="@id/shorty_two_image"
        style="@style/main_list_column_text_style2"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shorty_two_subname"
        android:layout_below="@id/shorty_two_name_tv"
        style="@style/main_list_column_text_style"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"/>
</RelativeLayout>